<%= form_with(model: [@establishment, @opening_hour], local: true) do |form| %>
  <div>
    <%= form.label :day_of_week, "Dia da Semana" %>
    <%= form.select :day_of_week, options_for_select([
        ["Domingo", "domingo"],
        ["Segunda-feira", "segunda"],
        ["Terça-feira", "terça"],
        ["Quarta-feira", "quarta"],
        ["Quinta-feira", "quinta"],
        ["Sexta-feira", "sexta"],
        ["Sábado", "sábado"],
        ["Feriado", "feriado"]
      ]) %>
  </div>

  <div>
    <%= form.label :open_time, "Horário de Abertura" %>
    <%= form.time_field :open_time %>
  </div>

  <div>
    <%= form.label :close_time, "Horário de Fechamento" %>
    <%= form.time_field :close_time %>
  </div>

  <div>
    <%= form.label :closed, "Fechado" %>
    <%= form.check_box :closed %>
  </div>

  <div>
    <%= form.submit "Salvar Horário de Funcionamento" %>
  </div>
<% end %>
