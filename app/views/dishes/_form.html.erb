<div>
<%= form_with(model:[current_user.establishment, @dish] , local: true) do |form| %>
  <div>
  <%= form.label :name, Dish.human_attribute_name(:name) %>
  <%= form.text_field :name %>
</div>
  <%= form.label :description,Dish.human_attribute_name(:description) %>
  <%= form.text_area :description %>
<div>
  <%= form.label :calories, Dish.human_attribute_name(:calories)%>
  <%= form.number_field :calories %>
</div>
<div>
  <%= form.label :image, Dish.human_attribute_name(:image)%>
  <%= form.file_field :image %>
</div>
  <%= form.submit 'Salvar' %>
<% end %>
</div>

